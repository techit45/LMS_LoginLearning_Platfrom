# =========================================
# ENVIRONMENT VARIABLES TEMPLATE
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control
# =========================================

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Google Drive API Configuration - PRODUCTION (Vercel)
# Important: This should be a SINGLE LINE JSON string (no line breaks)
# Generate from Google Cloud Console > Service Accounts > Keys
GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"your_project_id","private_key_id":"your_private_key_id","private_key":"-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----\n","client_email":"your_service_account_email","client_id":"your_client_id","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"your_cert_url","universe_domain":"googleapis.com"}

# Google Drive Shared Drive ID
GOOGLE_DRIVE_FOLDER_ID=your_shared_drive_id_here

# =========================================
# LOCAL DEVELOPMENT ONLY
# =========================================

# Development Settings
NODE_ENV=development

# Google Drive API Configuration - DEVELOPMENT (Local Server)
# Path to local service account JSON file
GOOGLE_SERVICE_ACCOUNT_PATH=./credentials/google-drive-service-account.json

# Application Configuration
VITE_APP_NAME="Learning Management System"
VITE_APP_VERSION="1.0.0"

# Frontend Environment Variables (Optional - for client-side features)
VITE_GOOGLE_DRIVE_DEFAULT_FOLDER=your_default_folder_id
VITE_GOOGLE_DRIVE_IS_SHARED_DRIVE=true

# =========================================
# SECURITY NOTES
# =========================================
# 1. Never commit .env files to version control
# 2. Use different service accounts for development and production
# 3. Regularly rotate API keys and service account keys
# 4. Restrict service account permissions to minimum required
# 5. Monitor API usage for unusual activity
# 6. Store production secrets in secure environment (Vercel/Netlify dashboard)
# 7. Use environment-specific service accounts with minimal permissions